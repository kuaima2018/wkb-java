<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/40*.jsp</pattern>
        <pattern>/*ajax=true*</pattern>
        <pattern>/resources/*</pattern>
        <pattern>*/json/*</pattern>
        <pattern>/static/*</pattern>
       
              
        
    </excludes>
    <decorator name="default" page="default.jsp">
        <pattern>/index</pattern>


    </decorator>
    <decorator name="default_body" page="default_body.jsp">
        <pattern>*/selector</pattern>
        <pattern>*/selector/*</pattern>
        
        <pattern>/task/*</pattern>
        <pattern>/cart/*</pattern>
        <pattern>/inbound/*</pattern>
        <pattern>/customer/*</pattern>
        <pattern>/myorder/*</pattern>
        <pattern>/orderDetails/*</pattern>
        <pattern>/inventory/*</pattern>
        <pattern>/home/*</pattern>
        <pattern>/contact/*</pattern>
        <pattern>/integral/*</pattern>
        <pattern>/checkout/*</pattern>
        <pattern>/sms/*</pattern>
        <pattern>/message/*</pattern>
        <pattern>/callback/*</pattern>
        <pattern>/callbackAssign/*</pattern>
        <pattern>/userManagement/*</pattern>
        <pattern>/blacklist/*</pattern>
        <pattern>/complain/*</pattern>
    </decorator>

</decorators>
